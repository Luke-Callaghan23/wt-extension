{
	"comments": {
		"blockComment": [ "[", "]" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "'", "close": "'", },
		{ "open": "\"", "close": "\"", }
	],
	"surroundingPairs": [
		["(", ")"],
		["[", "]"],
		["*", "*"],
		["'", "'"],
		["\"", "\""]
	],
	"folding": {
		"markers": {
			"start": "^\\s*~~~\\b",
			"end": "^\\s*~~~\\b"
		},
	},
	"wordPattern": "(-?\\d*\\.\\d\\w*)|(\\w+'\\w+)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "colorizedBracketPairs": [
        [
            "(",
            ")"
        ],
        [
            "[",
            "]"
        ],
        [
            "{",
            "}"
        ] 
    ]
}